#!/bin/bash
set -e

INSTALL_DIR="$CACHE_DIR/trivy"
mkdir -p $INSTALL_DIR

TRIVY_VERSION="0.40.0" 
curl -sSL "https://github.com/aquasecurity/trivy/releases/download/v$TRIVY_VERSION/trivy_$TRIVY_VERSION_Linux-64bit.tar.gz" | tar xz -C $INSTALL_DIR


chmod +x $INSTALL_DIR/trivy


echo "export PATH=\$PATH:$INSTALL_DIR" >> $BUILD_DIR/.profile.d/trivy.sh
